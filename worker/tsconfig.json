{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/*", "**/dist/*"],
  "include": ["src"]
}
